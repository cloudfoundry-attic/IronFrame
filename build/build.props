<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Default">
  <PropertyGroup>

    <!-- Control default behaviour for XUnit runner -->
    <XUnitParallelizeAssemblies Condition=" '$(XUnitParallelizeAssemblies)' == '' ">True</XUnitParallelizeAssemblies>
    <XUnitParallelizeTestCollections Condition=" '$(XUnitParallelizeTestCollections)' == '' ">True</XUnitParallelizeTestCollections>
  </PropertyGroup>
</Project>
